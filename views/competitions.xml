<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Competition Listing Tree View  -->
        <record id="competitions_tree_view" model="ir.ui.view">
            <field name="name">competitions.tree.view</field>
            <field name="model">competitions</field>
            <field name="arch" type="xml">
                <tree string="Competitions"
                        js_class="account_tree">
                    <field name="title"/>
                    <field name="URL"/>
                    <field name="sellerUserName"/>
                    <field name="positiveFeedbackPercent" />
                    <field name="topRatedSeller"/>
                    <field name="shippingType"/>
                    <field name="shippingServiceCost"/>
                    <field name="current_price"/>
                    <field name="total_cost" />
                </tree>
            </field>
        </record>



        <record id="action_competitions" model="ir.actions.act_window">
            <field name="name">Competitions</field>
            <field name="res_model">competitions</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="competitions_tree_view"/>
            <!-- <field name="search_view_id" ref="view_account_invoice_filter"/> -->
            <field name="domain">[('listingID', '=', listingID)]</field>
            <!-- <field name="context">{'default_type': 'out_invoice'}</field> -->
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a customer invoice
              </p><p>
                Create invoices, register payments and keep track of the discussions with your customers.
              </p>
            </field>
        </record>

    </data>
</odoo>
