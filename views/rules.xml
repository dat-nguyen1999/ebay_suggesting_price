<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Suggesting Rules Form View  -->
        <record id="suggesting_rules_form_view" model="ir.ui.view">
            <field name="name">ebay_suggesting_rules.form.view</field>
            <field name="model">ebay_suggesting_rules</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!--                        <button name="update_current_price" type='object' string='Reprice' class="btn btn-success" />-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        
                            <button name="action_view_listings" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('listing_count', '=', 0)]}">
                                 <field name="listing_count" widget="statinfo" string="Listings"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1 class="text-primary">
                                <b>
                                    <field name="rname" placeholder="e.g. Below $1" />
                                </b>
                            </h1>
                        </div>
                        <group >
                            <group colspan="2">
                                <group>
                                    <field name="ebay_suggesting_strategy" style="font-weight: bold;"/>
                                    <field name="ebay_amount_type" style="font-weight: bold;" attrs="{'invisible':[('ebay_suggesting_strategy','=','matching')]}"/>
                                    <field name="ebay_amount_value" style="font-weight: bold;" attrs="{'invisible':[('ebay_suggesting_strategy','=','matching')]}"/>
                                </group>
                                <group>
                                    <label for="ebay_rule_message" invisible="1"/>
                                    <div>
                                        <field name="ebay_rule_message" readonly="1"/>
                                    </div>
                                </group>

                            </group>
                        </group>
<!--                        <notebook>-->
<!--                            <pages string="Listings">-->
<!--                                <field name="ebay_listings" readonly="1">-->
<!--                                    <tree>-->
<!--                                        <field name="ebay_title" />-->
<!--                                        <field name="ebay_category_id" />-->
<!--                                    </tree>-->
<!--                                </field>-->
<!--                            </pages>-->
<!--                        </notebook>-->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Suggesting Rules Tree View  -->
        <record id="suggesting_rules_tree_view" model="ir.ui.view">
            <field name="name">ebay_suggesting_rules.tree.view</field>
            <field name="model">ebay_suggesting_rules</field>
            <field name="arch" type="xml">
                <tree string="Suggesting Rules" default_order="create_date desc">
                    <field name="rname"/>
                    <field name="ebay_suggesting_strategy"/>
                    <field name="ebay_amount_type"/>
                    <field name="ebay_amount_value"/>
                    <!--                    <field name="ebay_top_rate_option" class="d-flex flex-row-reverse" />-->
                </tree>
            </field>
        </record>

        <!-- Suggesting Rules Kanban View  -->
        <record model="ir.ui.view" id="suggesting_repricer_kanban_view">
            <field name="name">ebay_suggesting_rules.kanban.view</field>
            <field name="model">ebay_suggesting_rules</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="rname"/>
                    <field name="ebay_suggesting_strategy"/>
                    <field name="ebay_amount_type"/>
                    <field name="ebay_amount_value"/>
                    <!--                    <field name="ebay_top_rate_option"/>-->

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <t t-esc="record.rname.value"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <!--                                <div class="oe_kanban_details">-->
                                <!--                                    <span t-if ="record.ebay_top_rate_option.raw_value == true">-->
                                <!--                                        Top rate-->
                                <!--                                    </span>-->
                                <!--                                    <span t-if ="record.ebay_top_rate_option.raw_value == false">No top rate</span>-->

                                <!--                                </div>-->
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- List Action-->
        <record id="action_ebay_rules" model="ir.actions.act_window">
            <field name="name">eBay Suggesting Rules </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ebay_suggesting_rules</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>
    </data>
</odoo>