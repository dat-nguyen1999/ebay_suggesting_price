<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Listing Form View  -->
        <record id="listing_form_view" model="ir.ui.view">
            <field name="name">ebay_listing.form.view</field>
            <field name="model">ebay_listing</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_suggesting_price" type='object' string='Get Suggesting Price' class="btn btn-success"   />
                        <button name="action_accept_suggesting_price" type='object' string='Accept Suggesting Price' class="btn btn-success"   />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="text-primary">
                                <b>
                                    <field name="ebay_title" placeholder="e.g. Nobody's Boy" />
                                </b>
                            </h1>
                        </div>
                        <group >
                            <group colspan="2">
                                <group>
                                    <field name="itemId" />
                                    <field name="ebay_category_id" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="ebay_URL" />
                                </group>
                                <group>
                                    <field name="ebay_listing_image"  widget="image" width="90px" height="90px"/>
                                </group>
                            </group>
                        </group>
                        <notebook>
                            <pages string="Price">
                                <group colspan="2">
                                    <h2>
                                        <group>
                                            <field name="ebay_suggesting_price" style="font-weight: bold;"/>
                                            <field name="ebay_current_price" style="font-weight: bold;"/>
                                            <field name="ebay_competition_price" style="font-weight: bold;"/>
                                            <field name="ebay_s_competitor" style="font-weight: bold;"/>
                                            <field name="ebay_min_price"/>
                                            <field name="ebay_max_price"/>
                                        </group>
                                    </h2>
                                    <h2>
                                        <group>
                                            <field name="ebay_automated_accepting"/>
                                            <field name="ebay_automated_suggesting"/>
                                            <field name="ebay_interval_type"/>
                                            <field name="ebay_interval_value" attrs="{'invisible': [('ebay_interval_type','in',('daily','hourly','minutely'))] }"/>
                                            <field name="ebay_next_call"/>
                                            <field name="ebay_repricer" style="font-weight: bold;"/>
                                            <field name="ebay_search_strategy" />
                                            <field name="ebay_keyword" attrs="{'invisible': [('ebay_search_strategy','=','barcode')] }"/>
                                        </group>
                                    </h2>
                                </group>
                            </pages>
                            <pages string="Barcode">
                                <h2>
                                    <group>
                                        <field name="ebay_ePID"/>
                                        <field name="ebay_ISBN"/>
                                        <field name="ebay_UPC"/>
                                        <field name="ebay_EAN"/>
                                    </group>
                                </h2>
                            </pages>
                            <pages string="History">
                                <field name="itemIDs">
                                    <tree default_order='create_date desc'>
                                        <field name="create_date"/>
                                        <field name="price"/>
                                        <field name="current_price"/>
                                        <field name="s_competitor"/>
                                    </tree>
                                </field>
                            </pages>
                        </notebook>
                    </sheet>
                    <footer>
                        <canvas id="chart"></canvas>
                        <script type="text/javascript" src="/ebay_pricer_1/static/src/js/build_chart.js"/>

                    </footer>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Listing Tree View  -->
        <record id="listing_tree_view" model="ir.ui.view">
            <field name="name">ebay_listing.tree.view</field>
            <field name="model">ebay_listing</field>
            <field name="arch" type="xml">
                <tree string="Listing" default_order="create_date desc">
                    <field name="ebay_title"/>
                    <field name="ebay_category_id"/>
                    <field name="ebay_repricer"/>
                    <field name="ebay_search_strategy" />
                    <field name="ebay_min_price"/>
                    <field name="ebay_max_price"/>
                    <field name="ebay_competition_price"/>
                    <field name="ebay_current_price"/>
                    <field name="ebay_suggesting_price"/>
                    <field name="ebay_automated_suggesting"   />
                    <field name="ebay_automated_accepting" />
                </tree>
            </field>
        </record>

        <!-- Listing Kanban View  -->
        <record model="ir.ui.view" id="listing_kanban_view">
            <field name="name">ebay_listing.kanban.view</field>
            <field name="model">ebay_listing</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="ebay_title"/>
                    <field name="ebay_category_id"/>

                    <field name="ebay_current_price"/>
                    <field name="ebay_min_price"/>
                    <field name="ebay_max_price"/>
                    <field name="ebay_automated_suggesting" />
                    <field name="ebay_automated_accepting" />
                    <field name="ebay_ePID"/>
                    <field name="ebay_ISBN"/>
                    <field name="ebay_UPC"/>
                    <field name="ebay_EAN"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Listing's Image"
                                         t-att-src="kanban_image('ebay_listing', 'ebay_listing_image',record.id.raw_value)"/>

                                </div>
                                <div class="oe_kanban_details">
                                    <t class="o_kanban_record_title">
                                        <strong t-esc="record.ebay_title.value"/>
                                    </t>
                                    <div t-if="record.ebay_current_price.value">
                                        <strong><field name="ebay_current_price" widget="monetary"/>$</strong>
                                    </div>
                                    <div t-if="record.ebay_automated_suggesting.raw_value">
                                        <span>Automated suggesting price</span>
                                    </div>
                                    <div t-if="record.ebay_automated_accepting.raw_value">
                                        <span>Automated accepting price</span>
                                    </div>
                                    <!--                                    <span t-if ="record.ebay_automated_suggesting">Automated suggesting price</span>-->
                                    <!--                                    <span t-if ="record.ebay_automated_accepting">Automated accepting price</span>-->


                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- List Action-->
        <record id="action_ebay_product_listing" model="ir.actions.act_window">
            <field name="name">eBay Product Listings </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ebay_listing</field>
            <field name="view_mode">kanban,tree,form,activity</field>
        </record>

        <record id="ir_cron_suggesting_price" model="ir.cron" forcecreate="True">
            <field name="name">Get Suggesting Price</field>
            <field name="model_id" ref="model_ebay_listing"/>
            <field name="state">code</field>
            <field name="code">model.automated_suggesting_price()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number" > 1 </field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True"/>
            <!-- <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 00:00:01')"/>-->
        </record>


    </data>


